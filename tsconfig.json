{
	"compilerOptions": {
		"module": "commonjs",
		"plugins": [
			{
				"name": "typescript-tslint-plugin",
				"configFile": "./tslint.json"
			}
		],
		"target": "es6",
		"outDir": "build",
		"strict": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"build",
		"node_modules"
	]
}
